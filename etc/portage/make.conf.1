CFLAGS="-march=broadwell -O2 -pipe"
CXXFLAGS="${CFLAGS}"

# WARNING: Changing your CHOST is not something that should be done lightly.
# Please consult http://www.gentoo.org/doc/en/change-chost.xml before changing.
CHOST="x86_64-pc-linux-gnu"
CPU_FLAGS_X86="mmx sse sse2 mmxext"
MAKEOPTS="-j4"
# These are the USE and USE_EXPAND flags that were used for
# buidling in addition to what is provided by the profile.
  GNOME="-gtk"
  KDE="qt qt3support kde"
  MUSIC="alsa jack aac lame mp3 flac ape wma"
  VIDEO="gif exif jpeg png tiff raw pdf gd avi win32codecs wmv x264 ffmpeg mpeg xv xvid dv mplayer"
  LNMP=""
  MSIC="truetype cairo acpi bindist bash-completion consolekit vim-syntax zlib mmx sse sse2s 
   thread -doc -emacs -ipv6"
USE="${GNOME} ${KDE} ${MUSIC} ${VIDEO} ${LNMP} ${MSIC}"

PORTDIR="/usr/portage"
DISTDIR="${PORTDIR}/distfiles"
PKGDIR="${PORTDIR}/packages"
GENTOO_MIRRORS="https://mirrors.ustc.edu.cn/gentoo/"
# USE aria2 as the default download tools
#FETCHCOMMAND="/usr/bin/aria2c -d /\${DISTDIR}/\${FILE} ${URI}"
#RESUMECOMMAND="${FETCHCOMMAND}"


# Enabling Portage's buildpkg feature
FEATURES="buildpkg getbinpkg"
# on the client systems, configure the PORTAGE_BINHOST variable accordingly for binar
PORTAGE_BINHOST="http://packages.gentooexperimental.org/packages/amd64-unstable/"

GRUB_PLATFORMS="efi-64"
ABI_X86="32 64"

ACCEPT_LICENSE="*"
ACCEPT_KEYWORDS="~x86"

INPUT_DEVICES="evdev synaptics mouse keyboard"
VIDEO_CARDS="intel i915 i965 nvidia"
#AUDIO_CARDS="hda"
LINGUAS="en_US zh_CN"
L10N="us zh-CN"
